{
  "root": true,
  "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": [
      "@typescript-eslint"
  ],
  "rules": {
    "semi": "off",
    "@typescript-eslint/semi": "warn"
  },
  "ignorePatterns": [
    "**/*.js",
    "src/**/*.test.ts",
    "src/lib/*.js",
    "src/*.js"
  ]
}
